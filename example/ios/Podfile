ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SherpaOnnxSttExample' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Debug: Print paths for verification
    puts "\n[DEBUG] ========================================"
    puts "[DEBUG] Verifying SherpaOnnxStt configuration..."
    
    # Find SherpaOnnxStt pod
    sherpa_pod = installer.pod_targets.find { |t| t.name == 'SherpaOnnxStt' }
    if sherpa_pod
      sherpa_pod_path = installer.sandbox.pod_dir('SherpaOnnxStt').to_s
      puts "[DEBUG] SherpaOnnxStt pod path: #{sherpa_pod_path}"
      
      # Verify XCFramework exists
      xcframework_path = File.join(sherpa_pod_path, 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
      if File.exist?(xcframework_path)
        puts "[DEBUG] XCFramework found at: #{xcframework_path}"
        
        # List architecture slices
        Dir.glob(File.join(xcframework_path, '*')).each do |slice|
          if File.directory?(slice)
            lib_file = File.join(slice, 'libsherpa-onnx.a')
            if File.exist?(lib_file)
              puts "[DEBUG]   - #{File.basename(slice)}/libsherpa-onnx.a [EXISTS]"
            else
              puts "[DEBUG]   - #{File.basename(slice)}/ [NO .a FILE]"
            end
          end
        end
      else
        puts "[DEBUG] ERROR: XCFramework NOT found at: #{xcframework_path}"
      end
      
      # Print build settings for SherpaOnnxStt target
      installer.pods_project.targets.each do |target|
        if target.name == 'SherpaOnnxStt'
          puts "[DEBUG] Build settings for SherpaOnnxStt target:"
          target.build_configurations.each do |config|
            puts "[DEBUG]   Configuration: #{config.name}"
            
            lib_dir = config.build_settings['SHERPA_ONNX_LIB_DIR']
            puts "[DEBUG]     SHERPA_ONNX_LIB_DIR: #{lib_dir || '(not set - will use conditional)'}"
            
            lib_search = config.build_settings['LIBRARY_SEARCH_PATHS']
            puts "[DEBUG]     LIBRARY_SEARCH_PATHS: #{lib_search || '(inherited)'}"
            
            ldflags = config.build_settings['OTHER_LDFLAGS']
            puts "[DEBUG]     OTHER_LDFLAGS: #{ldflags || '(inherited)'}"
          end
        end
      end
    else
      puts "[DEBUG] ERROR: SherpaOnnxStt pod target not found!"
    end
    
    puts "[DEBUG] ========================================\n"
  end
end
